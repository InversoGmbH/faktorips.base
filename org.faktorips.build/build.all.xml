<?xml version="1.0" encoding="UTF-8"?>
<project name="org.faktorips.build.all" default="build.all">

	<!-- simulate Cruise Control ant build calls -->
	<target name="build.all">
        
    	<ant dir="../org.faktorips.util/build" antfile="build.xml" target="buildjar"/>
        
		<!-- deactivate for FIPS 3.0
    	<ant dir="../org.faktorips.valuetypes/build" antfile="build.xml" target="buildjar"/>
		-->
        
    	<ant dir="../org.faktorips.valuetypes.java5/build" antfile="build.xml" target="buildjar"/>
        
    	<ant dir="../org.faktorips.dtflcommon/build" antfile="build.xml" target="buildjar"/>
  
		<!-- deactivate for FIPS 3.0
    	<ant dir="../org.faktorips.runtime/build" antfile="build.xml" target="buildjar"/>
    	-->
    	
        <ant dir="../org.faktorips.runtime.java5/build" antfile="build.xml" target="buildjar"/>
    	
		<!-- note: org.faktorips.fl needs javacc home -->
		<ant dir="../org.faktorips.fl/build" antfile="build.xml" target="cleanParserSource"/>
        <ant dir="../org.faktorips.fl/build" antfile="build.xml" target="clean"/>
        <ant dir="../org.faktorips.fl/build" antfile="build.xml" target="buildjar"/>

    	<ant dir="../org.faktorips.devtools.core/build" antfile="build.xml" target="buildjar"/>
        
    	<ant dir="../org.faktorips.devtools.stdbuilder/build" antfile="build.xml" target="buildjar"/>
        
    	<ant dir="../org.faktorips.nebula/build" antfile="build.xml" target="buildjar"/>
		
    	<ant dir="../org.faktorips.devtools.core.ui/build" antfile="build.xml" target="buildjar"/>
        
    	<ant dir="../org.faktorips.devtools.tableconversion/build" antfile="build.xml" target="buildjar"/>
        
    	<ant dir="../org.faktorips.devtools.ant/build" antfile="build.xml" target="buildjar"/>
        
    	<ant dir="../org.faktorips.uml/build" antfile="build.xml" target="buildjar"/>
		
    	<ant dir="../org.faktorips.devtools.ormext/build" antfile="build.xml" target="buildjar"/>
        
    	<ant dir="../org.faktorips.devtools.ormext.ui/build" antfile="build.xml" target="buildjar"/>

		<antcall target="build.runtime.addons" />

    	<ant dir="../org.faktorips.devtools.htmlexport/build" antfile="build.xml" target="buildjar"/>

		
<!-- none plugin projects 
    	<ant dir="../org.faktorips.pluginbuilder/build" antfile="build.xml" target="buildjar"/>
        <ant dir="../org.faktorips.integrationtest/build" antfile="build.xml" target="buildjar"/>
        <ant dir="../org.faktorips.integrationtest.java5/build" antfile="build.xml" target="buildjar"/>
-->
    </target>
	
	<target name="build.runtime.addons">
		<!-- runtime addons -->
		
    	<ant dir="../org.faktorips.runtime.groovy/build" antfile="build.xml" target="buildjar"/>

    	<ant dir="../org.faktorips.runtime.productdataservice.common/build" antfile="build.xml" target="buildjar"/>

    	<ant dir="../org.faktorips.runtime.productdataservice/build" antfile="build.xml" target="buildjar"/>

    	<ant dir="../org.faktorips.runtime.productdataprovider.ejbclient/build" antfile="build.xml" target="buildjar"/>

    	<ant dir="../org.faktorips.runtime.productdataprovider.ejbclient.test/build" antfile="build.xml" target="buildjar"/>
	</target>
	
	<target name="disable" description="This target does nothing - to easy disable the build prozess e.g. in hudson"/>
	
</project>