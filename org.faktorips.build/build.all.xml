<?xml version="1.0" encoding="UTF-8"?>
<project name="org.faktorips.build.all" default="build.all">

	<!-- simulate Cruise Control ant build calls -->
	<target name="build.all">
		<property name="target" value="buildjar"/>
	</target>
	
	<target name="test.all">
		<property name="target" value="test"/>
	</target>

	<!-- simulate Cruise Control ant build calls -->
	<target name="-build.all.target">
        
    	<ant dir="../org.faktorips.util/build" antfile="build.xml" target="${target}"/>
        
    	<ant dir="../org.faktorips.valuetypes/build" antfile="build.xml" target="${target}"/>
        
    	<ant dir="../org.faktorips.valuetypes.java5/build" antfile="build.xml" target="${target}"/>
        
    	<ant dir="../org.faktorips.dtflcommon/build" antfile="build.xml" target="${target}"/>
        
    	<ant dir="../org.faktorips.runtime/build" antfile="build.xml" target="${target}"/>
    	
        <ant dir="../org.faktorips.runtime.java5/build" antfile="build.xml" target="${target}"/>
    	
		<!-- note: org.faktorips.fl needs javacc home -->
		<ant dir="../org.faktorips.fl/build" antfile="build.xml" target="cleanParserSource"/>
        <ant dir="../org.faktorips.fl/build" antfile="build.xml" target="clean"/>
        <ant dir="../org.faktorips.fl/build" antfile="build.xml" target="${target}"/>

    	<ant dir="../org.faktorips.devtools.core/build" antfile="build.xml" target="${target}"/>
        
    	<ant dir="../org.faktorips.devtools.stdbuilder/build" antfile="build.xml" target="${target}"/>
        
    	<ant dir="../org.faktorips.nebula/build" antfile="build.xml" target="${target}"/>
		
    	<ant dir="../org.faktorips.devtools.core.ui/build" antfile="build.xml" target="${target}"/>
        
    	<ant dir="../org.faktorips.devtools.tableconversion/build" antfile="build.xml" target="${target}"/>
        
    	<ant dir="../org.faktorips.devtools.ant/build" antfile="build.xml" target="${target}"/>
        
    	<ant dir="../org.faktorips.uml/build" antfile="build.xml" target="${target}"/>
		
    	<ant dir="../org.faktorips.devtools.ormext/build" antfile="build.xml" target="${target}"/>
        
    	<ant dir="../org.faktorips.devtools.ormext.ui/build" antfile="build.xml" target="${target}"/>

    	<ant dir="../de.qv.faktorips/build" antfile="build.xml" target="${target}"/>
    	
<!-- none plugin projects 
    	<ant dir="../org.faktorips.pluginbuilder/build" antfile="build.xml" target="${target}"/>
        <ant dir="../org.faktorips.integrationtest/build" antfile="build.xml" target="${target}"/>
        <ant dir="../org.faktorips.integrationtest.java5/build" antfile="build.xml" target="${target}"/>
-->
    </target>
</project>