<project name="importProjects" default="import">
	<taskdef name="faktorips.import" classname="org.faktorips.devtools.ant.ProjectImporter"/>
	<taskdef name="faktorips.fullBuild" classname="org.faktorips.devtools.ant.FullBuild"/>
	
	<target name="import">
		<echo message="executing faktorips.import now" />
		<faktorips.import dir="${sourcedir}"/>
		<faktorips.fullBuild />
	</target>

</project>