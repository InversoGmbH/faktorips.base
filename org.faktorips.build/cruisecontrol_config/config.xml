      <buildstatus logdir="${logdir}/org.faktorips.fl"/>
      <buildstatus logdir="${logdir}/org.faktorips.devtools.core"/>
      <buildstatus logdir="${logdir}/org.faktorips.devtools.stdbuilder"/>
      <buildstatus logdir="${logdir}/org.faktorips.devtools.core.ui"/>
      <buildstatus logdir="${logdir}/org.faktorips.devtools.ant"/>
      <cvs module="org.faktorips.pluginbuilder" cvsroot="${cvsroot}"/>
    </modificationset>
    <schedule interval="60">
      <ant usedebug="false" uselogger="true" buildfile="${mainbuildfile}" target="pluginbuilder.faktorips"/>
    </schedule>
    <log logdir="${logdir}/${project.name}/">
      <merge dir="${workdir}/../pluginbuilder_tmp/org.faktorips.pluginbuilder/results/testresults/xml" pattern="*test.xml"/>
    </log>
  </project>
</cruisecontrol>