<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.faktorips</groupId>
	<artifactId>org.faktorips.build</artifactId>
	<version>3.7.2-SNAPSHOT</version>
	<packaging>pom</packaging>

	<!-- this is the parent POM from which all modules inherit common settings -->
	<properties>
		<tycho-version>0.13.0</tycho-version>
		<build-type>ci</build-type>
		<skipDeploy>true</skipDeploy>
	</properties>

	<repositories>
		<repository>
			<id>fips-deploy-plugins</id>
			<layout>p2</layout>
			<url>http://update.faktorzehn.org/p2repositories/faktorips/deploy</url>
		</repository>
		<repository>
			<id>fips-test-plugins</id>
			<layout>p2</layout>
			<url>http://update.faktorzehn.org/p2repositories/faktorips/test</url>
		</repository>
		<repository>
			<id>galileo</id>
			<layout>p2</layout>
			<url>http://update.faktorzehn.org/p2repositories/galileo/</url>
		</repository>
	</repositories>
	
	<build>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh</artifactId>
				<version>1.0</version>
			</extension>
		</extensions>
		<plugins>
			<!-- TARGER PLATFORM MUST REFERENCE FEATURES ONLY 
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<target>
						<artifact>
							<groupId>org.faktorips</groupId>
							<artifactId>org.faktorips.build</artifactId>
							<classifier>eclipse-galileo_online</classifier>
						</artifact>
					</target>
				</configuration>
			</plugin>
			-->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-source-plugin</artifactId>
				<version>${tycho-version}</version>
				<executions>
					<execution>
						<id>plugin-source</id>
						<goals>
							<goal>plugin-source</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<!-- enable tycho build extension -->
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<!-- Funktioniert noch nicht!!! -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<format>yyyyMMdd-HHmm'_${build-type}'</format>
				</configuration>
			</plugin>
			<!-- Tycho Test Settings -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<!-- For Debug add these parameters: -Xdebug -Xnoagent -Xrunjdwp:transport=dt_socket,address=8000,server=y,suspend=y -->
					<argLine>-Xms256m -Xmx512m -XX:MaxPermSize=256M</argLine>
					<useUIHarness>true</useUIHarness>
					<includes>
						<include>**/*Test.java</include>
					</includes>
					<excludes>
					</excludes>
				</configuration>
			</plugin>
			<!-- Release and Deploy settings -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>wagon-maven-plugin</artifactId>
				<version>1.0-beta-4</version>
				<executions>
					<execution>
						<id>default-cli</id>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<fromDir>target/repository/</fromDir>
							<includes>**</includes>
							<url>scp://${deployUser}@${deployServer}</url>
							<toDir>${deployDir}/${deployVersion}</toDir>
							<skip>${skipDeploy}</skip>
							<serverId></serverId>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2.1</version>
				<configuration>
					<executable>ssh</executable>
					<commandlineArgs>${deployUser}@${deployServer} 'cd ${deployDir};bash' &lt; ${project.parent.basedir}/${scriptName}</commandlineArgs>
					<skip>${skipDeploy}</skip>
				</configuration>
				<executions>
					<execution>
						<id>update-composite-p2</id>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	
	</build>

	<!-- These are all modules that are included in the Faktor-IPS build -->

	<modules>
		<!-- features org.faktorips.feature -->
		<module>../org.faktorips.feature</module>
		<module>../org.faktorips.feature.source</module>
		<module>../org.faktorips.feature.nls1</module>
		<module>../org.faktorips.testdependencies</module>
		<!-- plugins of feature org.faktorips.feature -->
		<module>../org.faktorips.abstracttest</module>
		<module>../org.faktorips.devtools.ant</module>
		<module>../org.faktorips.devtools.ant.test</module>
		<module>../org.faktorips.devtools.core</module>
		<module>../org.faktorips.devtools.core.test</module>
		<module>../org.faktorips.devtools.core.ui</module>
		<module>../org.faktorips.devtools.core.ui.test</module>
		<module>../org.faktorips.devtools.htmlexport</module>
		<module>../org.faktorips.devtools.htmlexport.nl1</module>
		<module>../org.faktorips.devtools.htmlexport.test</module>
		<module>../org.faktorips.devtools.stdbuilder</module>
		<module>../org.faktorips.devtools.stdbuilder.test</module>
		<module>../org.faktorips.devtools.stdbuilder.ui</module>
		<module>../org.faktorips.devtools.stdbuilder.ui.test</module>
		<module>../org.faktorips.devtools.tableconversion</module>
		<module>../org.faktorips.devtools.tableconversion.nl1</module>
		<module>../org.faktorips.devtools.tableconversion.test</module>
		<module>../org.faktorips.dtflcommon</module>
		<module>../org.faktorips.dtflcommon.test</module>
		<module>../org.faktorips.fl</module>
		<module>../org.faktorips.fl.test</module>
		<module>../org.faktorips.nls.devtools.core.nl1</module>
		<module>../org.faktorips.nls.devtools.core.ui.nl1</module>
		<module>../org.faktorips.nls.devtools.stdbuilder.nl1</module>
		<module>../org.faktorips.nls.devtools.stdbuilder.ui.nl1</module>
		<module>../org.faktorips.runtime.java5</module>
		<module>../org.faktorips.runtime.java5.test</module>
		<module>../org.faktorips.util</module>
		<module>../org.faktorips.util.test</module>
		<module>../org.faktorips.valuetypes.java5</module>
		<module>../org.faktorips.valuetypes.java5.test</module>
		<!-- p2 Repository and product -->
		<module>../org.faktorips.updatesite</module>
		<module>../org.faktorips.updatesite/test</module>
		<!-- 
		<module>../org.faktorips.product</module>
		 -->
	</modules>

	<profiles>
		<profile>
			<!-- as a workaround for TYCHO-520, only build mac binaries on macs -->
			<id>macosx</id>
			<activation>
				<property>
					<name>java.vendor.url</name>
					<value>http://www.apple.com/</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>target-platform-configuration</artifactId>
						<version>${tycho-version}</version>
						<configuration>
							<environments combine.children="append">
								<environment>
									<os>macosx</os>
									<ws>cocoa</ws>
									<arch>x86_64</arch>
								</environment>
							</environments>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>