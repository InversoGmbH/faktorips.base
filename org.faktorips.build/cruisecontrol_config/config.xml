<?xml version="1.0" encoding="UTF-8"?>
<cruisecontrol>
  <property name="workdir" value="checkout"/>
  <property name="mainbuildfile" value="build-faktorips.xml"/>
  <property name="logdir" value="logs"/>
  <property name="cvsroot" value="/usr/local/cvsroot"/>
  <!--=====================================================-->
  <!--Project definition: org.faktorips.util-->
  <!--=====================================================-->
  <project buildafterfailed="false" name="org.faktorips.util">
    <listeners>
      <currentbuildstatuslistener file="${logdir}/${project.name}/buildStatus.txt"/>
    </listeners>
    <bootstrappers/>
    <modificationset>
      <cvs module="org.faktorips.util" cvsroot="${cvsroot}"/>
    </modificationset>
    <schedule interval="60">
      <ant usedebug="false" uselogger="true" buildfile="${mainbuildfile}" target="util"/>
    </schedule>
    <log logdir="${logdir}/${project.name}/">
      <merge dir="${workdir}/org.faktorips.util/build/logs"/>
    </log>
  </project>
